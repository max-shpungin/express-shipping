{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "http://shipitdummy.com/shipit.schema.json",
  "title" : "Shipping",
  "description" : "Shipping order information",
  "type" : "object",
  "properties" : {
    "productId" : {
        "type": "integer",
        "minimum" : 1000},
    "name" : {"type" : "string"},
    "addr" :  {
      "type" : "string",
      "pattern" : "^[0-9].[a-zA-Z]$"},
    "zip" : {"type" : "string"}
  },
  "additionalProperties" : false,
  "required": [
    "productId",
    "name",
    "addr",
    "zip"
  ]
}